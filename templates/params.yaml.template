# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
mlflow:
  experiment_name: "my-ml-experiment"
  model_name: "my-model"
  tracking_uri: "http://localhost:5001"


# =============================================================================
# NOTES FOR DATA SCIENTISTS:
