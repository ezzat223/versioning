# - For experiments, use MLflow Projects CLI overrides instead

# =============================================================================
# DATA CONFIGURATION (Common for all tasks)
# =============================================================================
data:
  path: "data/dataset.csv"
  test_size: 0.2
  validation_size: 0.0
  random_state: 42


